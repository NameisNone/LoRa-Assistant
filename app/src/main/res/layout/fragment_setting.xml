<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="#FFF"
            android:drawableLeft="@mipmap/title"
            android:drawableRight="@mipmap/enter"
            android:gravity="center_vertical"
            android:text="     NameisBoy"
            android:textColor="#000"
            android:textSize="20sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_wifi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_relativelayout"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/img_wifi"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/wifi"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/tv_wifi"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="WiFi"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/img_wifi"/>
        <ImageView
            android:id="@+id/img_enter1"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/enter"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:id="@+id/tv_wifistate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="16sp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/img_enter1"
            android:layout_toRightOf="@id/tv_wifi"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_ble"
        android:layout_width="match_parent"
        android:layout_marginTop="0.5dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_relativelayout"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/img_ble"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ble"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/tv_ble"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="蓝牙"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/img_ble"/>
        <ImageView
            android:id="@+id/img_enter2"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/enter"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:id="@+id/tv_blestate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="关闭"
            android:textSize="16sp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/img_enter2"
            android:layout_toRightOf="@id/tv_ble"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_serial"
        android:layout_width="match_parent"
        android:layout_marginTop="0.5dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_relativelayout"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/img_serial"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/serial"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/tv_serial"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="串口"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/img_serial"/>
        <ImageView
            android:id="@+id/img_enter3"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/enter"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:id="@+id/tv_serialstate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="未连接"
            android:textSize="16sp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/img_enter3"
            android:layout_toRightOf="@id/tv_serial"/>
    </RelativeLayout>




</LinearLayout>